{contentType application/xml; charset=utf-8}
<<?php ?>?xml version="1.0"?>
<rss version="2.0">
	<channel>
		<title>{$title}</title>
		<link>{link //Homepage:}</link>
		<description>{$description}</description>

		{foreach $items as $item}
		<item>
			{foreach $item as $key => $value}
			<{!$key}>{$value}</{!$key}>
			{/foreach}
		</item>
		{/foreach}
	</channel>
</rss>
